{
  "Created": "Phunt_Vieg_ (Adapted Colors)",
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "os": "#ACB0BE",
    "pink": "#F5BDE6",
    "lavender": "#B7BDF8",
    "blue": "#8AADF4",
    "white": "#FFFFFF",
    "text": "#494D64"
  },
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:os",
          "style": "plain",
          "template": "\u256d\u2500",
          "type": "text"
        },
        {
          "background": "p:blue",
          "foreground": "p:text",
          "leading_diamond": "\ue0b6",
          "style": "diamond",
          "template": " {{ .UserName }} ",
          "trailing_diamond": "\ue0b0",
          "type": "session"
        },
        {
          "background": "p:pink",
          "foreground": "p:text",
          "properties": {
            "style": "full"
          },
          "style": "diamond",
          "template": " \uf114  {{ .Path }} ",
          "trailing_diamond": "\ue0b0",
          "type": "path"
        },
        {
          "background": "p:lavender",
          "foreground": "p:text",
          "properties": {
            "branch_icon": "",
            "fetch_stash_count": true,
            "fetch_status": false,
            "fetch_upstream_icon": true
          },
          "style": "diamond",
          "template": " \ue725({{ .UpstreamIcon }} {{ .HEAD }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }}) ",
          "trailing_diamond": "\ue0b0",
          "type": "git"
        },
        {
          "background": "p:lavender",
          "foreground": "p:text",
          "properties": {
            "time_format": "15:04"
          },
          "style": "diamond",
          "template": "{{ if ne (.Segments.Contains \"Git\") true }} \u2665  {{ .CurrentDate | date .Format }} {{ end }}",
          "trailing_diamond": "\ue0b0",
          "type": "time"
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "foreground": "p:os",
          "style": "plain",
          "template": "\u2570\u2500<p:blue>\u26a1</>",
          "type": "text"
        }
      ]
    }
  ],
  "transient_prompt": {
    "template": "<p:blue>\uf489 </><p:lavender>\uf0da</><p:pink>\uf105</> "
  },
  "final_space": true,
  "version": 7
}